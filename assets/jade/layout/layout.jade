include ../mixins/_helpers
include ../mixins/_view_helpers

- var bodyClass = ""
- var pageTitle = "Mooncake"
- var pageTitleDataL8n = "content:default/title"
block vars

doctype
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    title(data-l8n="#{pageTitleDataL8n}") #{pageTitle}
    meta(name="viewport", content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1, user-scalable=no")
    meta(name="format-detection", content="telephone=no")
    link(rel="icon" type="image/png" href="favicon.png")
    block headerMeta

    +stylesheetLinkTag("application","screen")
    link(href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,700", rel="stylesheet", type="text/css")

    block headerScripts

  body(class="#{bodyClass}")

    header.header
      .header__logo
        span.logo__emphasis Mooncake
        span(data-l8n="content:default/logo-ending") !Activity Stream

   //-   .header__actions
   //-     span.actions__link.clj--sign-out__link.func--sign-out__link(href="./sign-out", data-l8n="content:default/sign-out-link") !Sign out

    main.main-content(role="main")
      block content

    block footerScripts
