extends layout/layout

block vars
  - bodyClass = "func--error-500-page"
  - pageTitle = "!Error-500"
  - pageTitleDataL8n = "content:error-500/title"

block headerScripts

block content
  .box
    h1.page-title.clj--error-page-header(data-l8n="content:error-500/page-header") !Sorry something went wrong
    p.clj--error-page-intro(data-l8n="content:error-500/page-intro") !An unexpected error has occurred, please try again. We apologise for any inconvenience.
    .clj--error-page-content
      h2(data-l8n="content:error-default/return-to-link-header") !What do I do now?
      ul
        li
          span(data-l8n="content:error-default/return-to-link-before") !Please return to the
          =" "
          a.clj--error-return-home__link(href="./", title="!Return to Home", data-l8n="content:error-default/return-to-link attr/title:error-default/return-to-link-title-attr") !Home page
          =" "
          span(data-l8n="content:error-default/return-to-link-after") !now.
