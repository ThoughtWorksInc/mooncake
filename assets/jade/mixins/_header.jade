mixin headerSignedOut
  header.header
    .middle-container.middle-container--relative
      .header__logo: a.logo__link(href="/") Mooncake
      .header__actions
        span.clj--username
        a.action-link.clj--STRIP.clj--sign-in__link.func--sign-in__link(href="./sign-in")
          i.fa.fa-sign-in.action-link__icon
          span.action-link__title(data-l8n="content:default/sign-in-link") !Sign in


mixin headerSignedIn
  header.header
    .middle-container.middle-container--relative
      .header__logo: a.logo__link(href="/") Mooncake
      .header__actions
        span.clj--username
        a.action-link.clj--STRIP.clj--sign-out__link.func--sign-out__link(href="./sign-out")
          i.fa.fa-sign-out.action-link__icon
          span.action-link__title(data-l8n="content:default/sign-out-link") !Sign out
