extends layout/layout

block vars
  - bodyClass = "func--library-page"
  - pageTitle = "Library"
//  - pageTitleDataL8n = ""

block headerScripts
  style.
    .section {
      margin-bottom: 4rem;
    }
    .section-title {
      /*margin-top: 3rem;*/
    }
    .library-item {
      margin-bottom: 6rem;
    }
    .library-item:last-of-type {
      margin-bottom: 0;
    }
    .library__demo {
      margin: 0;
      padding: 0;
      list-style: none;
    }
    .empty-stream {
      position: relative;
      transform: none;
      top: auto;
      left: auto;
    }

block content

  .middle-container

    .section
      h2.section-title Header

      .library-item
        h3.library-title Header for sign in
        .library__demo.clj--library__sign-in-header
          +headerSignedOut

      .library-item
        h3.library-title Header for sign out
        .library__demo.clj--library__sign-out-header
          +headerSignedIn

    .section
      h2.section-title Feed

      .library-item
        h3.library-title Activity feed item warning
        ul.library__demo
          +streamItemWarning

      .library-item
        h3.library-title Empty activity feed item
        ul.library__demo
          +emptyStreamItem
