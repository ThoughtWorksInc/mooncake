extends layout/layout

block vars
  - bodyClass = "func--sign-in-page"
  - pageTitle = "!Sign in"
  - pageTitleDataL8n = "content:sign-in/title"
  - isSignedIn = false

block headerScripts

block content
  .box
    +flashMessageWithCljContainer('clj--flash-message-container','func--flash-message-container', 'fail')
      p.flash-message__title.clj--flash-message-text(data-l8n="content:flash/sign-in-failed") !Success Flash Message.
    h1.site-title
      span.site-title__line-one(data-l8n="content:sign-in/page-title-1") !Mooncake
      = " "
      span.site-title__line-two(data-l8n="content:sign-in/page-title-2") !Feeds redefined
    .columns
      .column.one-half
        p.lede(data-l8n="content:sign-in/page-intro-1") !Mooncake is a simple and secure tool for following actions all around the world.
        p(data-l8n="content:sign-in/page-intro-2") !Using Mooncake's all in one feed you can stay up to date with ease.
      .column.one-half
        p.sign-in-promo
          a.button.button--sign-in.clj--sign-in-with-d-cent.func--sign-in-with-d-cent(href="/index")
              span.icon-d-cent
              span(data-l8n="content:sign-in/sign-in-with-d-cent") !Continue with D-Cent
